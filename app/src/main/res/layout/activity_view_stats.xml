<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_height="match_parent"
    android:background="@drawable/tree"
    android:layout_margin="5dp"
    android:orientation="vertical"
    tools:context="dreyna.tong.userocgs.ViewStatsActivity">

    <TextView
        android:id="@+id/StatsNameTextView"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="0dp"
        android:textColor="@color/colorAccent"
        android:layout_weight="1"
        android:textSize="25sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/StatsAllMoneyEarned"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/StatsTotalPoundsRecycledTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:layout_weight="1"
        android:text="TextView" />

    <TextView
        android:id="@+id/EnergySavedTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorAccent"
        android:layout_weight="9"
        android:text="TextView" />

    <Button
        android:id="@+id/StatsBackToMainMenu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="backToMainMenuFromStats"
        android:text="@string/BackToMenuFromDetailsButton" />
</LinearLayout>
